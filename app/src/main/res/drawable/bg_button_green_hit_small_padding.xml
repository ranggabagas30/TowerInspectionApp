<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/corner" />

            <solid android:color="@color/green_button_innershadow_hit" />

            <stroke
                android:width="@dimen/corner_stroke"
                android:color="@color/green_button_stroke_hit" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/corner_stroke"
        android:left="@dimen/corner_innershadow"
        android:right="@dimen/corner_stroke"
        android:top="@dimen/corner_innershadow">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/corner" />

            <gradient
                android:angle="-90"
                android:centerY="60%"
                android:endColor="@color/green_button_bottom_hit"
                android:startColor="@color/green_button_top" />
        </shape>
    </item>

</layer-list>