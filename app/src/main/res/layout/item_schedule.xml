<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large" >

    <RelativeLayout
        android:id="@id/item_schedule_statuslayout"
        android:layout_width="@dimen/item_schedule_status_width"
        android:layout_height="@dimen/item_schedule_status_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/item_drill_green" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <com.sap.inspection.view.MyTextView
                android:id="@id/item_schedule_percent"
                style="@style/list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:shadowDx="1"
                android:shadowRadius="1"
                android:singleLine="true"
                android:text="100%"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.sap.inspection.view.MyTextView
                android:id="@id/item_schedule_status"
                style="@style/list_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_schedule_percent"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="Uploaded"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_schedule_status_height"
        android:layout_toRightOf="@id/item_schedule_statuslayout"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_xtra_small"
        android:paddingTop="@dimen/padding_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_schedule_arrow"
        android:layout_toRightOf="@id/item_schedule_statuslayout"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium" >

        <com.sap.inspection.view.MyTextView
            android:id="@id/item_schedule_title"
            style="@style/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="Aneka Indah" />

        <com.sap.inspection.view.MyTextView
            android:id="@id/item_schedule_task"
            style="@style/list_sub"
            android:layout_width="@dimen/item_schedule_task_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_schedule_title"
            android:drawableLeft="@drawable/item_schedule_dot_green"
            android:drawablePadding="@dimen/padding_small"
            android:singleLine="true"
            android:text="NEW LOCATION" />

        <com.sap.inspection.view.MyTextView
            android:visibility="gone"
            android:id="@id/item_schedule_place"
            style="@style/list_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_schedule_title"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_toRightOf="@id/item_schedule_task"
            android:drawableLeft="@drawable/ic_place"
            android:drawablePadding="@dimen/padding_small"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Cilandak Tangerang Jakarta Kota Sekali" />
    </RelativeLayout>

    <com.sap.inspection.view.ImageViewForList
        android:id="@+id/item_schedule_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_toStartOf="@+id/item_schedule_upload"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_small"
        android:src="@drawable/ic_collapse"
        android:visibility="visible"/>

    <com.sap.inspection.view.ImageViewForList
        android:id="@+id/item_schedule_upload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_small"
        android:src="@drawable/ic_upload" />

</RelativeLayout>