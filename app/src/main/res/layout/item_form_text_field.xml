<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_sub"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="@dimen/padding_large" >

    <com.sap.inspection.view.MyTextView
        android:id="@+id/item_form_label"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="SAMPLE"
        android:textColor="#333333" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_form_label"
        android:padding="@dimen/padding_small"
        android:visibility="gone" />

    <com.sap.inspection.view.MyTextView
        android:id="@+id/item_form_description"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/picture"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="SAMPLE"
        android:textColor="#333333" />

    <com.sap.inspection.view.FormInputText
        android:id="@+id/item_form_input"
        style="@style/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture"
        android:layout_toLeftOf="@id/item_form_description"
        android:minWidth="100dp"
        android:text="SAMPLE"
        android:textColor="#333333" />

</RelativeLayout>