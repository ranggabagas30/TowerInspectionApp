<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_helper1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding_medium"
            android:text="Air Conditioner" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/padding_medium"
            android:text="September, 25 1988" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_helper2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_helper1"
        android:background="#fafafa"
        android:padding="@dimen/padding_medium" >

        <TextView
            android:id="@+id/layout_helper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_medium"
            android:text="Upload" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/layout_helper1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_edittext_white"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_photo" />
    </RelativeLayout>

    <View
        android:id="@+id/layout_helper3"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_helper1"
        android:layout_toRightOf="@+id/layout_helper2"
        android:background="#333" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_helper1"
        android:layout_toRightOf="@+id/layout_helper3"
        android:background="#fafafa"
        android:padding="@dimen/padding_large" >

        <TextView
            android:id="@+id/layout_helper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Category" />

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_helper1"
            android:layout_marginBottom="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="@drawable/bg_edittext_white"
            android:gravity="top|left"
            android:maxLines="3"
            android:padding="@dimen/padding_small"
            android:text="Category" />

        <TextView
            android:id="@+id/layout_helper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/category"
            android:text="Description" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_helper2"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="@drawable/bg_edittext_white"
            android:gravity="top|left"
            android:maxLines="5"
            android:minLines="3"
            android:padding="@dimen/padding_small"
            android:text="Category" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout_helper1"
        android:background="#333" />

</RelativeLayout>