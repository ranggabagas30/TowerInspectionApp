<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by TowerAppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="TowerAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="TowerAppTheme" parent="TowerAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="CheckBoxTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="TowerAppTheme.MyButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/item_drill_red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bg_main</item>
    </style>
</resources>